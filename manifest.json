
{
  "manifest_version": 3,
  "name": "DeDupe2Activate",
  "version": "1.0",
  "author": "Webber",
  "description": "Automatically closes duplicate tabs, Activate Remaining Tab",
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "incognito": "split",
  "commands": {
    "close-duplicate-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Close all duplicate tabs"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
