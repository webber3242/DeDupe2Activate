{
  "manifest_version": 3,
  "name": "DeDupe2Activate",
  "version": "1.0",
  "author": "Webber",
  "description": "Automatically closes duplicate tabs and activates remaining tab",
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },  
  "action": {
    "default_title": "Close duplicate tabs",
    "default_icon": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
    }
  },
  
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

